/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for most data,
 *              allowing users to read and write their own data only. Public read access
 *              is granted to certain collections like 'articles' and 'gyms', but write
 *              access remains restricted to authorized users (e.g., article authors, admins).
 *
 * Data Structure:
 * - User-specific data is nested under /users/{userId}/...
 * - Public data (articles, gyms) resides in top-level collections.
 *
 * Key Security Decisions:
 * - Users can only list their own documents in user-scoped subcollections.
 * - Listing of all users is explicitly denied.
 * - Data consistency is enforced between the path and the document's internal user ID.
 * - Certain collections have owner-only writes with public read access (e.g. articles).
 * - The 'conversations' and 'messages' collections implement a shared access model between participants.
 *
 * Denormalization for Authorization:
 * - Relationships are enforced by requiring the `ownerId` field to match the `auth.uid`
 *   for user-owned documents.
 *
 * Structural Segregation:
 * - Publicly readable data (articles) is stored in a top-level collection, separate from
 *   private user data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Stores the public-facing profile for all users (both athletes and trainers).
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' can create their profile at /users/user123.
     * @allow (get, update, delete) - User with UID 'user123' can read/update/delete their profile at /users/user123.
     * @deny (create) - User with UID 'user456' cannot create a profile at /users/user123.
     * @deny (update) - User with UID 'user456' cannot update the profile at /users/user123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if true;
      allow list: if false; // Explicitly deny listing all users
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores articles for the knowledge zone.
     * @path /articles/{articleId}
     * @allow (get, list) - Any user can read articles.
     * @allow (create) - User with UID 'author123' can create an article with authorId 'author123'.
     * @allow (update, delete) - User with UID 'author123' can update/delete an article with authorId 'author123'.
     * @deny (create) - User with UID 'user456' cannot create an article with authorId 'author123'.
     * @deny (update) - User with UID 'user456' cannot update an article with authorId 'author123'.
     * @principle Public read with owner-only writes.
     */
    match /articles/{articleId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
    }

    /**
     * @description Stores categories for the knowledge zone articles.
     * @path /articleCategories/{categoryId}
     * @allow (get, list) - Any user can read article categories.
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Public read, no writes allowed.
     */
    match /articleCategories/{categoryId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description A subcollection listing the athletes managed by a specific trainer.
     * @path /trainers/{trainerId}/athletes/{athleteId}
     * @allow (get, list) - Trainer with ID 'trainer123' can read the athlete list they manage.
     * @allow (create) - Trainer with ID 'trainer123' can create an athlete under their management.
     * @allow (update, delete) - Trainer with ID 'trainer123' can update/delete athletes under their management.
     * @deny (create) - Trainer with ID 'trainer456' cannot create an athlete under 'trainer123'.
     * @deny (update) - Trainer with ID 'trainer456' cannot update athletes under 'trainer123'.
     * @principle Enforces trainer-athlete relationship.
     */
    match /trainers/{trainerId}/athletes/{athleteId} {
      allow get, list: if isOwner(trainerId);
      allow create: if isOwner(trainerId);
      allow update: if isExistingOwner(trainerId);
      allow delete: if isExistingOwner(trainerId);
    }

    /**
     * @description A global collection of workout plans created by trainers and athletes.
     * @path /workoutPlans/{planId}
     * @allow (get, list) - Any user can read workout plans.
     * @allow (create) - User with UID 'user123' can create a workout plan with trainerId 'user123'.
     * @allow (update, delete) - User with UID 'user123' can update/delete a workout plan with trainerId 'user123'.
     * @deny (create) - User with UID 'user456' cannot create a workout plan with trainerId 'user123'.
     * @deny (update) - User with UID 'user456' cannot update a workout plan with trainerId 'user123'.
     * @principle Public read with owner-only writes.
     */
    match /workoutPlans/{planId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.trainerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.trainerId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.trainerId == request.auth.uid && resource != null;
    }

    /**
     * @description Stores all workout sessions for a specific user.
     * @path /users/{userId}/workoutSessions/{sessionId}
     * @allow (get, list) - User with ID 'user123' can read their workout sessions.
     * @allow (create) - User with ID 'user123' can create a workout session under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their workout sessions.
     * @deny (create) - User with ID 'user456' cannot create a workout session under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update workout sessions under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/workoutSessions/{sessionId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores all running sessions for a specific user.
     * @path /users/{userId}/runningSessions/{sessionId}
     * @allow (get, list) - User with ID 'user123' can read their running sessions.
     * @allow (create) - User with ID 'user123' can create a running session under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their running sessions.
     * @deny (create) - User with ID 'user456' cannot create a running session under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update running sessions under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/runningSessions/{sessionId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores the fitness goals for a specific user.
     * @path /users/{userId}/goals/{goalId}
     * @allow (get, list) - User with ID 'user123' can read their fitness goals.
     * @allow (create) - User with ID 'user123' can create a fitness goal under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their fitness goals.
     * @deny (create) - User with ID 'user456' cannot create a fitness goal under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update fitness goals under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/goals/{goalId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores workouts that have been scheduled in a user's calendar.
     * @path /users/{userId}/plannedWorkouts/{plannedWorkoutId}
     * @allow (get, list) - User with ID 'user123' can read their planned workouts.
     * @allow (create) - User with ID 'user123' can create a planned workout under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their planned workouts.
     * @deny (create) - User with ID 'user456' cannot create a planned workout under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update planned workouts under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/plannedWorkouts/{plannedWorkoutId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores the personal achievements for a specific user.
     * @path /users/{userId}/achievements/{achievementId}
     * @allow (get, list) - User with ID 'user123' can read their achievements.
     * @allow (create) - User with ID 'user123' can create an achievement under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their achievements.
     * @deny (create) - User with ID 'user456' cannot create an achievement under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update achievements under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/achievements/{achievementId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores the meals logged by a specific user.
     * @path /users/{userId}/meals/{mealId}
     * @allow (get, list) - User with ID 'user123' can read their meals.
     * @allow (create) - User with ID 'user123' can create a meal under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their meals.
     * @deny (create) - User with ID 'user456' cannot create a meal under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update meals under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/meals/{mealId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores training requests sent or received by a user.
     * @path /users/{userId}/trainerRequests/{requestId}
     * @allow (get, list) - User with ID 'user123' can read their training requests.
     * @allow (create) - User with ID 'user123' can create a training request under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their training requests.
     * @deny (create) - User with ID 'user456' cannot create a training request under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update training requests under 'user123'.
     */
    match /users/{userId}/trainerRequests/{requestId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores a history of the user's body measurements.
     * @path /users/{userId}/bodyMeasurements/{measurementId}
     * @allow (get, list) - User with ID 'user123' can read their body measurements.
     * @allow (create) - User with ID 'user123' can create a body measurement under their profile.
     * @allow (update, delete) - User with ID 'user123' can update/delete their body measurements.
     * @deny (create) - User with ID 'user456' cannot create a body measurement under 'user123'.
     * @deny (update) - User with ID 'user456' cannot update body measurements under 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/bodyMeasurements/{measurementId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores metadata for a chat conversation a user is a part of.
     * @path /users/{userId}/conversations/{conversationId}
     * @allow get: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
     * @allow list: if isOwner(userId);
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Shared access: only participants can read the conversation metadata.
     */
    match /users/{userId}/conversations/{conversationId} {
       allow get: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
       allow list: if isOwner(userId);
       allow create: if false;
       allow update: if false;
       allow delete: if false;
    }

    /**
     * @description A global collection of exercises.
     * @path /exercises/{exerciseId}
     * @allow (get, list) - Any user can read exercises.
     * @allow (create) - User with UID 'user123' can create an exercise with ownerId 'user123'.
     * @allow (update, delete) - User with UID 'user123' can update/delete an exercise with ownerId 'user123'.
     * @deny (create) - User with UID 'user456' cannot create an exercise with ownerId 'user123'.
     * @deny (update) - User with UID 'user456' cannot update an exercise with ownerId 'user123'.
     * @principle Public read with owner-only writes.
     */
    match /exercises/{exerciseId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description A global collection of muscle groups, managed by administrators.
     * @path /muscleGroups/{muscleGroupId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Public read, no writes allowed.
     */
    match /muscleGroups/{muscleGroupId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description A global collection of gyms managed by administrators.
     * @path /gyms/{gymId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Public read, no writes allowed.
     */
    match /gyms/{gymId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Stores metadata for a chat conversation between users.
     * @path /conversations/{conversationId}
     * @allow get: if resource.data.participants.hasAny([request.auth.uid]);
     * @allow list: if false;
     * @allow create: if request.resource.data.participants.hasAny([request.auth.uid])
     *                && request.resource.data.trainerId == request.auth.uid
     *                || request.resource.data.athleteId == request.auth.uid;
     * @allow update: if resource.data.participants.hasAny([request.auth.uid]) && resource != null;
     * @allow delete: if false;
     * @principle Shared access: only participants can read and update the conversation metadata.
     */
    match /conversations/{conversationId} {
      allow get: if resource.data.participants.hasAny([request.auth.uid]);
      allow list: if false;
      allow create: if request.resource.data.participants.hasAny([request.auth.uid])
                     && (request.resource.data.trainerId == request.auth.uid
                         || request.resource.data.athleteId == request.auth.uid);
      allow update: if resource.data.participants.hasAny([request.auth.uid]) && resource != null;
      allow delete: if false;
    }

    /**
     * @description Stores all messages within a specific conversation.
     * @path /conversations/{conversationId}/messages/{messageId}
     * @allow get: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
     * @allow list: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
     * @allow create: if isSignedIn() && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Shared access: only participants of the parent conversation can read and write messages.
     */
    match /conversations/{conversationId}/messages/{messageId} {
        allow get: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
        allow list: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
        allow create: if isSignedIn() && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid;
        allow update: if false;
        allow delete: if false;
    }
  }
}